<%= form_for Trigger.new, url: { action: "create" }, id: 'new_trigger' do |form| %>
  <div class="user-box">
    <%= form.text_field :to, required: true, data: { turbo: "false" } %>
    <%= form.label 'Phone Number (+000000000000)' %>
  </div>

  <div class="user-box">
    <%= form.text_field :body, required: true, data: { turbo: "false" } %>
    <%= form.label 'Message Body' %>
  </div>

  <div class="submit-box">
    <span></span>
    <span></span>
    <span></span>
    <span></span>
    <%= form.submit 'Send Trigger', class: 'button-style' %>
  </div>
<% end %>
